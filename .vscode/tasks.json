{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run PHPUnit Tests",
            "type": "shell",
            "command": "php",
            "args": [
                "-c", "${workspaceFolder}/.php-env/php.ini",
                "${workspaceFolder}/vendor/phpunit/phpunit/phpunit",
                "--testdox",
                "--display-all-issues"
            ],
            "options": {
                "env": {
                    "XDEBUG_MODE": "off"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
